{
  "name": "shadcn-index-generator",
  "version": "0.1.0",
  "description": "Generate index.ts files for shadcn/ui components with proper type exports",
  "main": "dist/index.js",
  "bin": {
    "shadcn-index-generator": "dist/bin.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && echo '{\"type\": \"module\"}' > dist/package.json",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "start": "ts-node src/cli.ts"
  },
  "keywords": [
    "shadcn",
    "ui",
    "components",
    "index",
    "typescript",
    "barrel",
    "exports"
  ],
  "author": "Alex",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
